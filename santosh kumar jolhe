        details_window.grab_set()
        
        main_frame = ttk.Frame(details_window, padding=20)
        main_frame.pack(fill="both", expand=True)
        
        # Title
        ttk.Label(main_frame, text="Software License Information", 
                 font=("Segoe UI", 14, "bold")).pack(pady=(0, 20))
        
